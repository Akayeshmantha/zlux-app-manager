{
  "compileOnSave": true,
  "include": [
    "ts/*.ts"
  ],
  "compilerOptions": {
    "target": "ES5",
    "outDir": "../lib",
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "types": [
      "node",
      "express"
    ],
    "lib": ["es6"],
    "esModuleInterop": true
  }
}
